<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 모든 곳에서 사용할 수 있는 설정을 작성 여기에 주로 작성하는 내용은 데이터 베이스 관련된 설정 -->

	<!-- 스프링에서 데이터베이스 사용할 때 필수적으로 설정 스프링은 데이터베이스 연결 및 트랜잭션 관리를 스프링이 함 -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<!-- 사용할 데이터베이스 종류 -->
		<property name="driverClassName">
			<value>oracle.jdbc.driver.OracleDriver</value>
		</property>
		<!-- 접속할 데이터베이스 경로 -->
		<property name="url">
			<value>jdbc:oracle:thin:@192.168.0.240:1521:xe</value>
		</property>
		<!-- 접속할 계정 이름 -->
		<property name="username">
			<value>user09</value>
		</property>
		<!-- 접속할 계정의 비밀번호 -->
		<property name="password">
			<value>user09</value>
		</property>

	</bean>



	<!-- MyBatis 설정 : 인터페이스 -->
	<bean id="sqlSessionFactory1"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 연결할 데이터베이스 정보 -->
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="itemMapper"
		class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface"
			value="kaoak.neo.item.dao.GoodMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory1" />
	</bean>


	<!-- 하이버네이트 사용을 위한 bean 설정 -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">		
 		
		<property name="hibernateProperties">
			<value> hibernate.dialect=org.hibernate.dialect.Oracle10gDialect
			</value>
		</property>
		<!-- 데이터베이스 접속 정보 등록 -->
		<property name="dataSource" ref="dataSource" />
		<!-- 하이버네이트 설정 파일 등록 -->
		<property name="mappingResources">
			<list>
				<value>kakao/neo/item/dao/item.hbm.xml</value>
			</list>
		</property>
	</bean>
</beans>
